---
const altText = "Guillermo Navarro - gan01_97";
const imageUrl =
  "https://media.licdn.com/dms/image/C4D03AQHOUR_buXSVCg/profile-displayphoto-shrink_800_800/0/1641999912324?e=1721865600&v=beta&t=G39UR5Csjp3vIt-mYas14-DP8Pq__W-Bk1Wtxvm1zu0";
const linkedin = "https://www.linkedin.com/in/guillermo-antonio-navarro/";
const Github = "https://github.com/Guille0197";

import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import GitHubIcon from "@/components/icons/GitHub.astro";
import SocialPill from "@/components/SocialPill.astro";
import TypewriterEffect from "./TypewriterEffect.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <a
      href={linkedin}
      target="_blank"
      rel="noopener noreferrer"
      class="md:hover:scale-105"
    >
      <img
        class="rounded-full shadow-2xl size-20"
        src={imageUrl}
        alt={altText}
      />
    </a>
    <a
      href={linkedin}
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, soy Guillermo
  </h1>
  <TypewriterEffect />
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-sky-500 [&>strong]:text-sky-500 [&>strong]:font-semibold dark:text-gray-300 text-balance"
  >
    Con <strong>+4 años</strong> de experiencia. Especializado en el desarrollo de
    <strong>aplicaciones web</strong> y <strong>móviles híbridas</strong>.
    <br />
    Desde Panamá 🇵🇦
  </p>

  <nav class="flex gap-1 sm:gap-1 md:gap-3 mt-8 flex-nowrap sm:flex-wrap">
    <SocialPill href="mailto:gnavarro0197@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href={linkedin}>
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href={Github}>
      <GitHubIcon class="size-4" />
      GitHub
    </SocialPill>
  </nav>
</div>
